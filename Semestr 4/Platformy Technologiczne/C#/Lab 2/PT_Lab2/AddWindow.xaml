<Window x:Class="pt_lab2.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT_Lab2"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="468">
    <Grid>
        <Label Margin="25,25,101,353">Name</Label>
        
        <TextBox x:Name="nameInput" Margin="87,31,20,353" RenderTransformOrigin="0.5,0.5"/>
        <RadioButton x:Name="radioFile" Margin="87,99,133,290">File</RadioButton>
        <RadioButton x:Name="radioDirectory" Margin="159,99,53,290">Directory</RadioButton>
        <CheckBox x:Name="checkRO" Margin="87,148,61,241">ReadOnly</CheckBox>
        <CheckBox x:Name="checkA" Margin="87,178,61,211">Archive</CheckBox>
        <CheckBox x:Name="checkH" Margin="87,208,61,181">Hidden</CheckBox>
        <CheckBox x:Name="checkS" Margin="86,238,62,151">System</CheckBox>
        <Button x:Name="buttonOK" Margin="78,273,245,116" Click="OK_Click">OK</Button>
        <Button x:Name="buttonCancel" Margin="253,273,70,116" RenderTransformOrigin="-0.947,-5.032" Click="Cancel_Click">Cancel</Button>
    </Grid>
</Window>
